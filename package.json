{
  "name": "ubp",
  "version": "0.1.0",
  "description": "Documentation-as-Code Middleware â€” Markdown docs to Document Graph for AI agents",
  "author": "sert-xx <demo.sert@gmail.com>",
  "license": "MIT",
  "type": "module",
  "bin": {
    "ubp": "./dist/main.js"
  },
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "files": [
    "dist/",
    "LICENSE",
    "README.md",
    "README.ja.md"
  ],
  "keywords": [
    "mcp",
    "documentation",
    "knowledge-graph",
    "semantic-search",
    "ai-agent",
    "document-graph",
    "markdown",
    "claude"
  ],
  "homepage": "https://github.com/sert-xx/unified-blueprint",
  "bugs": {
    "url": "https://github.com/sert-xx/unified-blueprint/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sert-xx/unified-blueprint.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/main.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "better-sqlite3": "^11.8.0",
    "chokidar": "^5.0.0",
    "commander": "^13.1.0",
    "picocolors": "^1.1.0",
    "remark-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.0",
    "uuid": "^11.1.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.0"
  },
  "optionalDependencies": {
    "@huggingface/transformers": "^3.8.1",
    "@xenova/transformers": "^2.17.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.12.0",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^9.20.0",
    "prettier": "^3.5.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.55.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
